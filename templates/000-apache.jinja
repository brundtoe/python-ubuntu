 <VirtualHost *:80>
  ServerName default
  ServerAdmin root@localhost
  ## Vhost docroot
  DocumentRoot '/var/www/html'
  ## Directories, there should at least be a declaration for /var/www/html
  Alias '/samples' '/var/www/html/websites/htdocs/samples'
  Alias '/bookstore' '/var/www/html/doctrine26/bookstore/web/public'
  Alias '/customers' '/var/www/html/doctrine26/customers/web/public'
  Alias '/sqlite' '/var/www/html/doctrine26/sqlite/web/public'
  <Directory '/var/www/html'>
    Options Indexes FollowSymLinks MultiViews
    AllowOverride None
    Require all granted
  </Directory>
  ## Logging
  ErrorLog /var/log/{{ app_user }}/error_log
  ServerSignature Off
  CustomLog /var/log/{{ app_user }}/access_log combined
  ## Script alias directives
  ScriptAlias /cgi-bin '/usr/lib/cgi-bin'
</VirtualHost>